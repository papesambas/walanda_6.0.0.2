{% extends 'base.html.twig' %}

{% block title %}Departements{% endblock %}

{% block body %}
    <h1>Departements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ departement.designation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ departement.createdAt ? departement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ departement.updatedAt ? departement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ departement.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_departements_index') }}">back to list</a>

    <a href="{{ path('app_departements_edit', {'id': departement.id}) }}">edit</a>

    {{ include('departements/_delete_form.html.twig') }}
{% endblock %}
