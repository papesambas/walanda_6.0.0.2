{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
    <h1>Classes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ class.designation }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ class.capacite }}</td>
            </tr>
            <tr>
                <th>Effectif</th>
                <td>{{ class.effectif }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ class.disponibilite }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ class.createdAt ? class.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ class.updatedAt ? class.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ class.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_classes_index') }}">back to list</a>

    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">edit</a>

    {{ include('classes/_delete_form.html.twig') }}
{% endblock %}
