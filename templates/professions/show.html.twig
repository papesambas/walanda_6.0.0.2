{% extends 'base.html.twig' %}

{% block title %}Professions{% endblock %}

{% block body %}
    <h1>Professions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profession.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ profession.designation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ profession.createdAt ? profession.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ profession.updatedAt ? profession.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ profession.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_professions_index') }}">back to list</a>

    <a href="{{ path('app_professions_edit', {'id': profession.id}) }}">edit</a>

    {{ include('professions/_delete_form.html.twig') }}
{% endblock %}
