{% extends 'base.html.twig' %}

{% block title %}Professions index{% endblock %}

{% block body %}
    <h1>Professions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profession in professions %}
            <tr>
                <td>{{ profession.id }}</td>
                <td>{{ profession.designation }}</td>
                <td>{{ profession.createdAt ? profession.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ profession.updatedAt ? profession.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ profession.slug }}</td>
                <td>
                    <a href="{{ path('app_professions_show', {'id': profession.id}) }}">show</a>
                    <a href="{{ path('app_professions_edit', {'id': profession.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professions_new') }}">Create new</a>
{% endblock %}
