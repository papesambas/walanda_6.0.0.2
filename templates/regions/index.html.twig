{% extends 'base.html.twig' %}

{% block title %}Regions index{% endblock %}

{% block body %}
    <h1>Regions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.designation }}</td>
                <td>{{ region.createdAt ? region.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ region.updatedAt ? region.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ region.slug }}</td>
                <td>
                    <a href="{{ path('app_regions_show', {'id': region.id}) }}">show</a>
                    <a href="{{ path('app_regions_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_regions_new') }}">Create new</a>
{% endblock %}
