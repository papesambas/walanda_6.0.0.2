{% extends 'base.html.twig' %}

{% block title %}Communes index{% endblock %}

{% block body %}
    <h1>Communes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                <td>{{ commune.id }}</td>
                <td>{{ commune.designation }}</td>
                <td>{{ commune.createdAt ? commune.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commune.updatedAt ? commune.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commune.slug }}</td>
                <td>
                    <a href="{{ path('app_communes_show', {'id': commune.id}) }}">show</a>
                    <a href="{{ path('app_communes_edit', {'id': commune.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_communes_new') }}">Create new</a>
{% endblock %}
